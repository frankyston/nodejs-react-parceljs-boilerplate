{
  "name": "nodejs-react-parcel-boilerplate",
  "version": "1.0.0",
  "description": "A minimal NodeJS server and React client boilerplate with parcel as bundler",
  "main": "index.js",
  "scripts": {
    "start": "parcel watch ./client/src/index.html --out-dir ./client/dist --public-url ./ & nodemon index.js",
    "build": "parcel build ./client/src/index.html --out-dir client/build --public-url /client"
  },
  "keywords": [
    "parcel",
    "react"
  ],
  "author": "Thiago Brasil <tchaguitos@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "consign": "^0.1.6",
    "cors": "^2.8.4",
    "express": "^4.16.1",
    "jsonwebtoken": "^8.1.0",
    "mongoose": "^4.13.4"
  },
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "parcel-bundler": "^1.0.1",
    "nodemon": "^1.12.1"
  }
}